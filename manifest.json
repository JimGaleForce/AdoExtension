{
  "manifest_version": 3,
  "name": "ADO Power Tools",
  "version": "1.0.2",
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "action": {
    "default_icon": {
      "16": "src/assets/icons/16.png",
      "32": "src/assets/icons/32.png"
    },
    "default_title": "ADO Power Tools",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/pages/summary/index.html",
        "src/adostyles.css"
      ],
      "matches": [
        "*://*.visualstudio.com/*",
        "https://dev.azure.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "css": [
        "src/adostyles.css"
      ],
      "js": [
        "src/ado/content.js"
      ],
      "matches": [
        "*://*.visualstudio.com/*",
        "https://dev.azure.com/*"
      ],
      "run_at": "document_idle"
    },
    {
      "js": [
        "src/ado/content-script.ts",
        "src/ado/main.ts"
      ],
      "matches": [
        "*://*.visualstudio.com/*/_sprints",
        "*://*.visualstudio.com/*/_sprints/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "32": "src/assets/icons/32.png",
    "64": "src/assets/icons/64.png",
    "128": "src/assets/icons/128.png"
  }
}